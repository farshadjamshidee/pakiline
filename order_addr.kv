#:import MapView kivy_garden.mapview
MDScreen:
    name: 'order_addr'
    MDFloatLayout:
        md_bg_color: '#b613c0'
        MDCard:
            size_hint: None, None
            size: 300, 600
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 3
            padding: 25
            spacing: 25
            orientation: 'vertical'
            radius:30


            MDLabel:
                text: app.slogan()['address']
                font_name: 'B Lotus'
                font_size: 22
                halign: 'right'
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: 15
                color:'white'
                md_bg_color: '#b613c0'
                padding:8

            MDTextField:
                id: user
#                hint_text: '0 9 _ _  _ _ _  _ _ _ _'
                text: app.slogan()['address']
                font_name:'B Lotus'
                halign:'right'
                validator: 'phone'
                icon_left: "mark"
                size_hint_x: None
                width: 200
                font_size: 18
                pos_hint: {"center_x": 0.5}
                on_focus: app.focus()
                color: '#b613c0'

            MDBoxLayout:
                MapView:
                    id: mapview
                    lat : 34.08
                    lon : 49.71
                    zoom : 11
                    double_tap_zoom: True

            MDRectangleFlatButton:
                md_bg_color: '#b613c0'
                theme:'Custom'
                text_color: 'white'
                text: app.slogan()['address']
                font_name:'B Lotus'
                font_size: 22
                halign:'center'
                pos_hint: {"center_x": 0.5}
#                on_press: app.logger()
                size_hint: 1,.01
                radius:30,40
